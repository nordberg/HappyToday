<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.nordberg.android.happytoday.HappyMomentActivity">

    <TextView
        android:id="@+id/what_made_you_happy_textview"
        android:text="@string/what_made_you_happy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/happy_moment_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/happy_hint"/>

    <Button
        android:id="@+id/add_happy_moment_btn"
        android:text="@string/add_happy_moment_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addHappyMoment"/>

</LinearLayout>
